    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate patient ID for testing if not set",
          "if (!pm.collectionVariables.get('patientId') || pm.collectionVariables.get('patientId') === 'example-patient-id') {",
