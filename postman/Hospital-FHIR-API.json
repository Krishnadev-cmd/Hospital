              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"baseUrl\": \"{{fhirBaseUrl}}\",\n  \"clientId\": \"{{fhirClientId}}\",\n  \"clientSecret\": \"{{fhirClientSecret}}\",\n  \"accessToken\": \"{{fhirAccessToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/fhir/test",
              "host": ["{{baseUrl}}"],
              "path": ["api", "fhir", "test"]
            },
            "description": "Test FHIR server connection with provided credentials"
          }
        },
        {
          "name": "Get Current Configuration",
          "request": {
            "method": "GET",
            "header": [],
